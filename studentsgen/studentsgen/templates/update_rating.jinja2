{% extends "layout.jinja2" %}

{% block content %}
    <h1>Update Rating</h1>

    <form action="{{request.route_url('update_rating', p=professor_id, c=course_id, w=work.id)}}" method="POST" class="form">
        <div class="form-group">
            <label for="title">{{work.name}}</label>
        </div>

        {% for student in form.students %}
            <label for="body">{{student.point.label}}</label>
            {{student.point(class_='form-control')}}
        {% endfor %}

        <div class="form-group">
            <button type="submit" class="btn btn-default">Submit</button>
        </div>
    </form>
    <p><a href="{{request.route_url('home')}}">Go Back</a></p>
{% endblock %}